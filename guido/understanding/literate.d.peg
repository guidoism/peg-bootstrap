sp                <- ' '   
                  / '\n'   
                  / '\t'   .
_               <- sp _   
                  /    .
rule              <- n: name _ '<-' _ body: choice '.' _ -> (format(["function parse_",
           vars["n"],
           "(input, pos) { let state = { pos: pos }; ",
           "let vars = {}",
           vars["body"],
           " return state; }"]))
 .
grammar           <- _ r: rule g: grammar -> (format([vars["r"], " ", vars["g"]]))
 
                  / _ r: rule -> (format(["// This is from a template in peg.org:\n", vars["r"], 
